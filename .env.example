# platform config
# wallet that receives the 5% cut
PLATFORM_WALLET=YOUR_PLATFORM_WALLET_ADDRESS_HERE

# path to keypair json, relative or absolute
PLATFORM_WALLET_KEYPAIR_PATH=./wallets/platform-wallet.json

# rpc endpoint - devnet for testing, mainnet when you're ready
SOLANA_RPC_URL=https://api.devnet.solana.com

# network identifier
SOLANA_NETWORK=devnet

# backend port
PORT=3001

# frontend vars (NEXT_PUBLIC_ prefix = visible in browser)
NEXT_PUBLIC_API_URL=http://localhost:3001

# fee split - 0.05 = 5% to platform, 95% to creator
NEXT_PUBLIC_PLATFORM_FEE_PERCENTAGE=0.05

# loyalty cashback - 0.005 = 0.5% each to supporter + creator from our cut
LOYALTY_REWARD_PERCENTAGE=0.005
